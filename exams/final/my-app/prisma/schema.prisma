generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Team {
  id        String   @id @default(cuid())
  title     String   @unique
  completed Boolean  @default(false)
  date      DateTime @default(now())
  members     Member[]
}

model Member {
  id          String   @id @default(cuid())
  title       String
  completed   Boolean  @default(false)
  date        DateTime @default(now())
  teamMember Team  @relation(fields: [team], references: [id], onDelete: Cascade)
  team     String

  @@unique([team, title])
}
